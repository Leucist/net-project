@page
@model IndexModel
@{
    ViewData["Title"] = "Home page";
}

<link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />

<div class="text-center">
    <h1 class="display-4">Welcome</h1>

    <img src="~/images/logo.png" alt="logo">

    <!-- Top Courses Section -->
    <div class="top-courses">
        <h2>Top Courses</h2>
        <div class="top-row">
            @for (int i=0; i < Model.CoursesOnPage.Courses.Count/2; i++) {
                <div class="course-card">
                    <div class="course-info">
                        <a asp-page="/course/Course" asp-route-id="@Model.CoursesOnPage.Courses[i].Id">
                            <h3>@(i+1). @Model.CoursesOnPage.Courses[i].Name</h3>
                            <p>@Model.CoursesOnPage.Courses[i].Description</p>
                        </a>
                    </div>
                </div>
            }
        </div>
        <div class="bottom-row">
            @for (int i=Model.CoursesOnPage.Courses.Count/2; i < Model.CoursesOnPage.Courses.Count; i++) {
                <div class="course-card">
                    <div class="course-info">
                        <a asp-page="/course/Course" asp-route-id="@Model.CoursesOnPage.Courses[i].Id">
                            <h3>@(i+1). @Model.CoursesOnPage.Courses[i].Name</h3>
                            <p>@Model.CoursesOnPage.Courses[i].Description</p>
                        </a>
                    </div>
                </div>
            }
        </div>
    </div>
</div>

